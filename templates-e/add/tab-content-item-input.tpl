<div role="tabpanel" class="tab-pane {c2r-class}" id="{c2r-nr}">
	<div class="spacer15"></div>
	<div class="form-group">
		<label for="inputName-{c2r-nr}">{c2r-label-name}</label>
		<input type="text" class="form-control" id="inputName-{c2r-nr}" name="name[]" placeholder="{c2r-label-name}-{c2r-nr}" required="">
	</div>
	<div class="form-group">
		<label for="inputDescription-{c2r-nr}">{c2r-label-description}</label>
		<textarea id="inputDescription-{c2r-nr}" class="form-control editor" rows="10" name="description[]"  placeholder="{c2r-label-description}-{c2r-nr}" required=""></textarea>
	</div>
</div>
